<Window x:Class="OfferManagerDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Offer Manager Demo" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search + Actions -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBox Width="260" Margin="0,0,8,0" VerticalAlignment="Center"
                     Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Aktualisieren" Command="{Binding RefreshCommand}" Margin="0,0,8,0"/>
            <Button Content="Neues Angebot" Command="{Binding AddCommand}"/>
            <TextBlock Text="{Binding Items.Count, StringFormat=' {0} EintrÃ¤ge'}" 
                       Foreground="Gray" Margin="12,0,0,0" VerticalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Width="120" Margin="12,0,0,0"/>
        </DockPanel>

        <!-- List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedOffer}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nr." Binding="{Binding Number}" Width="120"/>
                <DataGridTextColumn Header="Kunde" Binding="{Binding Customer}" Width="*"/>
                <DataGridTextColumn Header="Betrag" Binding="{Binding Amount, StringFormat={}{0:C}}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Erstellt" Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Als gewonnen markieren" Command="{Binding SetWonCommand}" Margin="0,0,8,0"/>
            <Button Content="Als verloren markieren" Command="{Binding SetLostCommand}"/>
        </StackPanel>
    </Grid>
</Window>
